<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>最新上架商品 </h2>
        </div>
    </div>
</div>
<div class="row product-container">

    @{
        foreach (var item in Model.spu)
        {
            <div class="box col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 " style="margin-bottom:8px">
                <div class="thumbnail" style="width: 100%; ">
                    <img class="img-responsive" title="Click to View Product detail" style="cursor:pointer; width:100%; height:100%;"
                         src="~/Content/Img/@item.spuImg1" />
                    <div class="caption " style="height:40px">
                        <h5>@item.spuName</h5>
                    </div>
                    <div class="caption">
                        <p>$@item.spuPrice</p>
                    </div>
                    <div class="caption d-flex justify-content-between">
                        <button class="btn shadow-none" style="outline:0;"><i class="far fa-heart"></i></button>
                        <button class="btn shadow-none" style="outline:0;"><i class="fas fa-cart-plus"></i></button>
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="d-flex justify-content-center ">
    <button class="btn shadow-none" style="outline:0;">瀏覽更多</button>
</div>

<script>
    $(".owl-carousel").owlCarousel({
        loop: true, // 循環播放
        margin: 10, // 外距 10px
        nav: true, // 顯示點點
        responsive: {
            0: {
                items: 1 // 螢幕大小為 0~600 
            },
            600: {
                items: 1 // 螢幕大小為 600~1000 
            },
            1000: {
                items: 1 // 螢幕大小為 1000 以上 
            }
        }
    });
</script>