<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 一貳衫</title>   
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row mt-5">
            <div class="col-12 col-sm-8">@Html.ActionLink(" ", "Index", "Home", null, new { style = "background: url('" + Url.Content("~/Content/Img/logo.png") + "') no-repeat center right; display:block; height:122px; width:238px;" })</div>
            <div class="col-12 col-sm-4 d-flex justify-content-end align-items-end mb-5">
                <input class="form-control shadow-none" type="search" placeholder="Search" aria-label="Search">
                <button class="btn shadow-none" style="outline:0;" type="submit"><i class="fas fa-search"></i></button>
            </div>
        </div>
        <div>
            <ul class="row list-unstyled justify-content-end mb-5 pr-5 mr-4">
                @Html.ActionLink("登入", "Login", "Home", new { @class = "text-dark px-4 text-decoration-none " })
                @Html.ActionLink("會員中心", "Member", "Home", new { @class = "text-dark px-4 text-decoration-none" })
                @Html.ActionLink("購物車", "ShopCart", "Home", new { @class = "text-dark px-4 text-decoration-none" })
            </ul>
        </div>
        <div class="row mb-4 mt-5" style="font-size:20px">
            <div class="col-sm-2"></div>
            <div class="col-12 col-sm-2 text-center">
                @Html.ActionLink("WOMAN", "WOMAN", "Home", new { @class = "text-dark text-decoration-none " })
            </div>
            <div class="col-12 col-sm-2 text-center">
                @Html.ActionLink("MAN", "MAN", "Home", new { @class = "text-dark text-decoration-none " })
            </div>
            <div class="col-12 col-sm-2 text-center">
                @Html.ActionLink("KIDS", "KIDS", "Home", new { @class = "text-dark text-decoration-none " })
            </div>
            <div class="col-12 col-sm-2 text-center">
                @Html.ActionLink("BABY", "BABY", "Home", new { @class = "text-dark text-decoration-none " })
            </div>
            <div class="col-sm-2"></div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 拍賣</p>
            </footer>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
